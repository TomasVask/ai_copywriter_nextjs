{
  "eslint.useFlatConfig": true,
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.formatOnSave": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "dist": true,
    "**/package-lock.json": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/dist": true,
    "**/node_modules": true
  },
  "files.associations": {
    "*.css": "tailwindcss",
  },
  "tailwindCSS.experimental.classRegex": [
    "\\bclass(?:Name)?\\s*=\\s*[\"'`]([^\"'`]*)[\"'`]", // Default class detection
    "\\b[A-Za-z0-9_]*[Cc]lass[A-Za-z0-9_]*\\s*=\\s*[\"'`]([^\"'`]*)[\"'`]", // Matches any property containing "class"
    "\\b[A-Za-z0-9_]*[Ss]tyle[A-Za-z0-9_]*\\s*=\\s*[\"'`]([^\"'`]*)[\"'`]" // Matches any property containing "style"
  ],
}